###--- Variables ---###
set $lock_screen_script ~/.local/bin/lockscreen
set $term alacritty
set $filemanager thunar
set $innergap 10
set $outergap 10

# Mod1=<Alt>, Mod4=<Super>
set $superkey Mod4
set $altkey Mod1

# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

###--- COLORS ---###
# colors from xresources or red in case of errors
set_from_resource $bg          i3wm.background  #ff0000
set_from_resource $fg          i3wm.foreground  #ff0000
set_from_resource $urgent      i3wm.color3      #ff0000
set_from_resource $normal      i3wm.color4      #ff0000
set_from_resource $inactive    i3wm.color7      #ff0000
set_from_resource $unfocused   i3wm.color7      #ff0000
set_from_resource $color0      i3wm.color0      #ff0000
set_from_resource $color1      i3wm.color1      #ff0000
set_from_resource $color2      i3wm.color2      #ff0000
set_from_resource $color3      i3wm.color3      #ff0000
set_from_resource $color4      i3wm.color4      #ff0000
set_from_resource $color5      i3wm.color5      #ff0000
set_from_resource $color6      i3wm.color6      #ff0000
set_from_resource $color7      i3wm.color7      #ff0000
set_from_resource $color8      i3wm.color8      #ff0000
set_from_resource $color9      i3wm.color9      #ff0000
