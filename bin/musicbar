#!/bin/env bash

SND_STATUS=$(playerctl --player=playerctld status 2>/dev/null)

get_text()
{
	echo $(playerctl --player=playerctld metadata --format "{{ title }} - {{ artist }}")
}

if [ "$SND_STATUS" = "Playing" ]; then
    get_text
elif [ "$SND_STATUS" = "Paused" ]; then
    get_text
else
    echo ""
fi
