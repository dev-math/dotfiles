#!/usr/bin/env bash

if [[ $1 = refresh ]]
then
	case `dunstctl is-paused` in
    	true)
		echo 
        	;;
    	false)
		echo 
        	;;
	esac
else
	case `dunstctl is-paused` in
    	true)
        	dunstctl set-paused false
		polybar-msg hook notification-toggle 1
        	;;
    	false)
		dunstctl set-paused true
		polybar-msg hook notification-toggle 2
        	;;
	esac
fi

