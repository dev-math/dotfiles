#!/bin/env bash

SND_STATUS=$(playerctl --player=playerctld status 2>/dev/null)

TEXT=$(playerctl --player=playerctld metadata --format "{{ title }} - {{ artist }}")

if [ "$SND_STATUS" = "Playing" ] && [ "$TEXT" != " - " ]; then
    echo $TEXT
elif [ "$SND_STATUS" = "Paused" ] && [ "$TEXT" != " - " ]; then
    echo $TEXT
else
    echo ""
fi
