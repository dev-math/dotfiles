# Please see https://i3wm.org/docs/userguide.html for a complete reference!

###--- Variables ---###
set $term kitty
set $filemanager thunar
set $innergap 8
set $outergap 8

# Mod1=<Alt>, Mod4=<Super>
set $superkey Mod4
set $altkey Mod1

# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

###--- COLORS ---###
# colors from xresources or red in case of errors
set_from_resource $bg          i3wm.background  #ff0000
set_from_resource $fg          i3wm.foreground  #ff0000
set_from_resource $color0      i3wm.color0      #ff0000
set_from_resource $color1      i3wm.color1      #ff0000
set_from_resource $color2      i3wm.color2      #ff0000
set_from_resource $color3      i3wm.color3      #ff0000
set_from_resource $color4      i3wm.color4      #ff0000
set_from_resource $color5      i3wm.color5      #ff0000
set_from_resource $color6      i3wm.color6      #ff0000
set_from_resource $color7      i3wm.color7      #ff0000
set_from_resource $color8      i3wm.color8      #ff0000
set_from_resource $color9      i3wm.color9      #ff0000
set_from_resource $color10     i3wm.color10     #ff0000
set_from_resource $color11     i3wm.color11     #ff0000
set_from_resource $color12     i3wm.color12     #ff0000
set_from_resource $color13     i3wm.color13     #ff0000
set_from_resource $color14     i3wm.color14     #ff0000
set_from_resource $color15     i3wm.color15     #ff0000

# class                 border    backgr.    text      indicator    child_border
client.background       $bg
client.focused          $color4   $color0    $color7   $color4      $color4
client.focused_inactive $bg       $color0    $fg       $bg          $bg
client.unfocused        $bg       $color0    $fg       $bg          $bg
client.urgent           $color3   $color0    $fg       $color3      $color3
client.placeholder      $bg       $color0    $fg       $bg          $bg    

###--- SETTINGS ---###
new_window pixel 2
new_float pixel 2
gaps inner $innergap
gaps outer $outergap

# Hide borders
hide_edge_borders none

focus_follows_mouse no

# Font for window titles
font pango:SF UI Display bold 12

for_window [class=".*"] title_format "%title  ⋯  %class"
title_align center

# Reload Polybar with i3
exec_always --no-startup-id ~/.local/bin/reloadPolybar

###--- BINDS ---###
# start program launcher
bindsym Control+space exec "rofi -show drun -theme ~/.cache/wal/launcher.rasi"

# start a terminal
bindsym $superkey+Return exec $term

# start file manager
bindsym $superkey+e exec $filemanager

# lock screen
bindsym $superkey+$altkey+l exec ~/.local/bin/lockscreen

# enter fullscreen mode for the focused container
bindsym $superkey+f fullscreen toggle

# kill focused window
bindsym $superkey+Shift+q kill
bindsym $altkey+F4 kill

# Use Mouse+$mod to drag floating windows
floating_modifier $superkey

# Gaps binds
bindsym $superkey+plus gaps inner all plus 1; gaps outer all plus 1
bindsym $superkey+minus gaps inner all minus 1; gaps outer all minus 1

# Screenshots
bindsym $superkey+Print exec ~/.local/bin/screenshot selection
bindsym Print exec ~/.local/bin/screenshot full

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# split in horizontal orientation
bindsym $superkey+Shift+h split h

# split in vertical orientation
bindsym $superkey+Shift+v split v

# change focus
bindsym $superkey+h focus left
bindsym $superkey+j focus down
bindsym $superkey+k focus up
bindsym $superkey+l focus right

# move focused window
bindsym $superkey+Left move left
bindsym $superkey+Down move down
bindsym $superkey+Up move up
bindsym $superkey+Right move right

# change container layout (stacked, tabbed, toggle split)
bindsym $superkey+s layout stacking
bindsym $superkey+w layout tabbed
bindsym $superkey+q layout toggle split

# toggle tiling / floating
bindsym $superkey+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $superkey+space focus mode_toggle

# focus the parent container
bindsym $superkey+a focus parent

# focus the child container
#bindsym $superkey+d focus child

# toggle gaps
bindsym $superkey+Shift+g gaps inner all set 0; gaps outer all set 0; [class=".*"] border normal
bindsym $superkey+g gaps inner all set $innergap; gaps outer all set $outergap; [class=".*"] border pixel 2

# switch to workspace
bindsym $superkey+1 workspace number $ws1
bindsym $superkey+2 workspace number $ws2
bindsym $superkey+3 workspace number $ws3
bindsym $superkey+4 workspace number $ws4
bindsym $superkey+5 workspace number $ws5
bindsym $superkey+6 workspace number $ws6
bindsym $superkey+7 workspace number $ws7
bindsym $superkey+8 workspace number $ws8
bindsym $superkey+9 workspace number $ws9
bindsym $superkey+0 workspace number $ws10

# move focused container to workspace
bindsym $superkey+Shift+1 move container to workspace number $ws1
bindsym $superkey+Shift+2 move container to workspace number $ws2
bindsym $superkey+Shift+3 move container to workspace number $ws3
bindsym $superkey+Shift+4 move container to workspace number $ws4
bindsym $superkey+Shift+5 move container to workspace number $ws5
bindsym $superkey+Shift+6 move container to workspace number $ws6
bindsym $superkey+Shift+7 move container to workspace number $ws7
bindsym $superkey+Shift+8 move container to workspace number $ws8
bindsym $superkey+Shift+9 move container to workspace number $ws9
bindsym $superkey+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $superkey+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $superkey+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $superkey+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $superkey+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $superkey+r mode "default"
}
bindsym $superkey+r mode "resize"

###--- OTHERS ---###
# Open specific applications in floating mode (use 'xprop' to get info about a window)
for_window [title="alsamixer"] floating enable border pixel 1
for_window [class="Clipgrab"] floating enable
for_window [class="Galculator"] floating enable border pixel 1
for_window [class="GParted"] floating enable border normal
for_window [title="i3_help"] floating enable sticky enable border normal
for_window [class="Pavucontrol"] floating enable
for_window [class="Pavucontrol"] resize set 800 600
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# Assign (use xprop to get window class (need xdotool))
assign [class="discord"] → number 10
